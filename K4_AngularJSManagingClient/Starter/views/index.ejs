<html ng-app="TestApp">
  <head>
    <title>The MEAN stack</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.js"></script>
  </head>
  <!-- vm: view model -->
  <body ng-controller="MainController as vm">
    <!-- establish a two-way binding between the input field and the vm.message variable, so any changes made to the input field will update the value of vm.message and vice versa -->
    <input type="text" ng-model="vm.message" />
    <br />
    {{ vm.message }}
    <br />
    <ul>
      <!-- vm.people is an array (refer to app.js): -->
      <li ng-repeat="person in vm.people">
        {{ person.name }}
      </li>
    </ul>

    <script src="assets/js/app.js"></script>
  </body>
</html>
